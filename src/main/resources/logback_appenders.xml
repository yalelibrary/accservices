<!-- Logback appenders -->

<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d | %p | %logger{15} | %M - %m%n
            </pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <File> /usr/local/tomcat/logs/shelfscan.log</File>
        <Append>true</Append>
        <encoder>
            <pattern>%d | %p | %logger{15} | %M - %m%n
            </pattern>
        </encoder>
    </appender>
</included>

